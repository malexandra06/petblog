<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Create a post</title>
  <link rel="stylesheet" href="/styles/style-createPost.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <% if (typeof isLoggedIn !== 'undefined' && isLoggedIn) { %>
    <%- include("partials/navbar2") %>
  <% } else { %>
    <%- include("partials/navbar") %>
  <% } %>

  <div class="createpost-wrapper">
    <div class="createpost-box">
      <form action="/api/posts/post" method="post" enctype="multipart/form-data" class="createpost-form">
        <h1>Create a post for your blog</h1>
        <div class="createpost-field title-field">
          <input type="text" id="post-title" name="title" placeholder="Title" required>
        </div>
        <div class="createpost-field content-field">
          <input type="text" id="post-content" name="content" placeholder="Content">
        </div>
        <div class="createpost-field image-field">
          <input type="file" id="post-image" name="image" accept="image/*" required>
        </div>
        <div class="createpost-actions">
          <button type="submit" class="btn btn-primary">Create Post</button>
        </div>
      </form>
    </div>
  </div>

  <%- include("partials/footer") %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="/scripts/script.js"></script>
</body>
</html>
